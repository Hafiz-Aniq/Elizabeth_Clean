<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex justify-center items-center">
          <div class="max-w-7xl text-center">
            <a class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold" href="{{blog.url}}">{{ blog.title }}</a>

            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
          </div>
        </div>
      {% when 'article_author' %}
        <div class="flex justify-center item-center">
          <div class="max-w-7xl item-center">
            {% if section.settings.show_author %}
              <small>{{ article.author }}</small>
            {% endif %}

          </div>
        </div>

      {% when 'article_date' %}

        <div class="flex justify-center item-center">
          <div class="max-w-7xl item-center">

            {% if section.settings.show_date %}
              <time datetime="{{article.published_at | date: '%Y-%m-%d'}}">
                {{- article.published_at | date: format: 'on_date' -}}
              </time>
            {% endif %}
          </div>
        </div>
      {% when 'article_image' %}
        <img
          src="{{article.image | img_url: 'large' }}"
          alt="{{article.image.alt}}"
          width="600"
          height="400">

      {% when 'article_content' %}
        <div class="">{{ article.content }}</div>

        {% else %}

    {% endcase %}
  {% endfor %}
</article>

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_author",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "show_date",
        "default": true,
        "label": "Display Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": " Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author Name",
        "limit": 1
      },
      {
        "type": "article_date",
        "name": "Article Publish Date",
        "limit": 1
      },
      {
        "type": "article_image",
        "name": "Thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": " Content",
        "limit": 1
      }
    ]
  }
{% endschema %}