<div class="max-w-md">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_html }}</p>
  </div>
  <div class="my-4">
    {% if section.settings.button == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}

    {% endif %}
    <a href={{shop_url}} class=" px-4 inline py-2 text-base text-white font-medium shadow bg-green-600 rounded-md hover:bg-green-800 ">{{ section.settings.button_text }}</a>
  </div>
</div>

{% schema %}
  {
    "name": "template-404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading Title"
      }, {
        "type": "text",
        "id": "subtext_html",
        "default": "the page that you are looking for is not found",
        "label": "404 Subtext title"
      }, {
        "type": "text",
        "id": "button_text",
        "default": "Go back to home",
        "label": "Button Label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}